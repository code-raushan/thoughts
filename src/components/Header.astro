---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Blog', href: '/blog' },
  { label: 'About', href: '/about' }
];
---

<header class="border-b border-gray-200 dark:border-gray-800 bg-card-light dark:bg-card-dark transition-colors duration-200">
  <nav class="container mx-auto px-4 py-5">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-primary-light dark:text-primary-dark hover:text-accent-light dark:hover:text-accent-dark transition-colors">
        Raushan K.
      </a>
      <div class="flex items-center space-x-8">
        <ul class="flex space-x-8">
          {navItems.map(item => (
            <li>
              <a 
                href={item.href}
                class="text-gray-600 dark:text-gray-400 hover:text-accent-light dark:hover:text-accent-dark transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
        <ThemeToggle />
      </div>
    </div>
  </nav>
</header>